---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header currentPage='home' />
  <div
    class='py-2 px-6 rounded-md absolute top-0 left-0 right-0 bottom-0 h-fit w-fit m-auto'>
    <h1
      class='text-2xl md:text-6xl font-bold text-black mb-4 max-w-3xl text-center leading-tight'>
      IA³: Applied Artificial Intelligence & Data Analysis
    </h1>
    <img src='/ia3-prop/init.webp' class='w-2xl m-auto bg-zinc-50' />
  </div>
  <div class='absolute bottom-10 left-0 w-full grid place-items-center'>
    <p
      class='text-black text-sm bg-blue-200 py-1 px-3 rounded-lg shadow-md select-none'>
      © 2025 IA³ research group
    </p>
  </div>
</Layout>
