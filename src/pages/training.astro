---
import Header from "../components/Header.astro";
import TrainingCard from "../components/TrainingCard.astro";
import Layout from "../layouts/Layout.astro";

import { TRAINING } from "../lib/training";
---

<Layout>
  <Header currentPage='training' />
  <main
    class='w-full flex flex-col items-center justify-center md:py-12 md:px-56 py-4 px-10'>
    <h1 class='text-2xl text-center'>Training courses</h1>
    <h2 class='text-base text-center'>
      We are open to preparing customized courses. If you are interested contact ia3 At uji DOT es.
    </h2>
    <div class='grid md:grid-cols-3 grid-cols-1 gap-8 mt-8 max-w-6xl'>
      {
        TRAINING.map((training) => (
          <TrainingCard
            image={training.image}
            name={training.name}
            description={training.description}
            teachers={training.teachers}
            startDate={training.startDate}
            endDate={training.endDate}
            place={training.place}
          />
        ))
      }
    </div>
  </main>
</Layout>
