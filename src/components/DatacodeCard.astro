---
import Link from "../icons/Link.astro";
import Paper from "../icons/Paper.astro";

export interface Props {
  name?: string;
  description?: string;
  paper?: string;
  link?: string;
  image?: string;
  type?: "Database" | "Code";
}

const { name, link, image, description, paper, type } = Astro.props;
const imageAlt = name ? `${name} cover image` : "Dataset cover image";
---

<div
  class='hover:shadow-lg transition-shadow duration-300 p-3 bg-white rounded-2xl shadow-md flex flex-col justify-between gap-3 max-w-80'>
  <img
    class='aspect-square rounded-sm object-cover overflow-hidden'
    src={`/datacode/${image}`}
    alt={imageAlt}
    loading='lazy'
  />
  <h3 class='text-sm text-gray-700'>{type}</h3>
  <h3 class='text-xl'>{name}</h3>
  <p class='text-base'>{description}</p>
  <div class='grid grid-cols-2 gap-4 pt-4'>
    <a
      href={paper}
      target='_blank'
      rel='noopener noreferrer'
      class='border border-blue-800 rounded-sm px-4 py-2 hover:bg-blue-100 transition-all duration-300 cursor-pointer text-center flex items-center justify-center gap-2'>
      <Paper class='size-6' />
      Paper
    </a>
    <a
      href={link}
      target='_blank'
      rel='noopener noreferrer'
      class='border border-blue-800 rounded-sm px-4 py-2 hover:bg-blue-200 transition-all duration-300 cursor-pointer text-center flex items-center justify-center gap-2'>
      <Link class='size-4' />
      Link
    </a>
  </div>
</div>
